<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
              android:layout_width="fill_parent" android:layout_height="wrap_content">

    <TextView android:layout_marginTop="5dip" android:layout_width="fill_parent" android:layout_height="40dip"
              android:gravity="center" android:text="@string/pick_emotion_title" android:layout_gravity="center"
              android:textSize="20sp" android:textStyle="bold"/>
    <GridView android:layout_marginLeft="5dip" android:layout_marginRight="5dip" android:layout_marginBottom="5dip"
              android:background="@drawable/pick_custom_face_bg" android:id="@+id/gridview" android:layout_weight="1"
              android:layout_width="fill_parent" android:layout_height="fill_parent" android:numColumns="4"
              android:verticalSpacing="10dip" android:horizontalSpacing="10dip" android:columnWidth="80dip"
              android:gravity="center"/>
</LinearLayout>
