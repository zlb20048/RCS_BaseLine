<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white_bg"
    android:gravity="right"
    android:orientation="vertical" >

    <include
        android:id="@+id/validation_title"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:id="@+id/edit_total_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.huawei.basic.android.im.ui.basic.LimitedEditText
            android:id="@+id/send_content"
            style="@style/validation_edittext_text"
            android:layout_width="fill_parent"
            android:layout_height="143.0dip"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="13.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/edittext_green"
            android:gravity="left"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="16.0dip" />

        <LinearLayout
            android:id="@+id/cancel_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/send_content"
            android:layout_alignRight="@id/send_content"
            android:layout_marginBottom="11.0dip"
            android:layout_marginRight="12.0dip" >

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_cancel" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/count_last"
        style="@style/validation_edittext_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="11.0dip"
        android:background="#00000000"
        android:text="50" />

</LinearLayout>