<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@drawable/list_item_bg_xml"
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/child"
	android:layout_width="fill_parent" android:layout_height="60dip"
	android:gravity="center_vertical">

	<LinearLayout android:layout_width="wrap_content"
		android:orientation="vertical" android:layout_height="wrap_content"
		android:layout_weight="1" android:layout_marginLeft="18dip"
		android:gravity="left|center_vertical">
		<TextView android:id="@+id/name" android:layout_height="wrap_content"
			android:layout_width="wrap_content" 
			android:layout_marginTop="5dip"
			
			style="@style/friend_name_text"
			android:singleLine="true" android:text="123"/>

		<TextView android:layout_width="wrap_content" android:id="@+id/phone_num"
			android:layout_height="wrap_content" android:singleLine="true"
			android:layout_marginTop="3dip" android:layout_marginBottom="5dip"
			android:layout_marginLeft="2dip" style="@style/friend_signature_text" android:text="1234567890"/>
	</LinearLayout>

	<LinearLayout android:layout_width="wrap_content"
		android:id="@+id/images" android:layout_marginRight="32dip"
		android:gravity="center_vertical" android:layout_height="wrap_content">
		<TextView android:id="@+id/add_status" style="@style/friend_signature_text"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/app_name" android:textColor="#419407" />
	</LinearLayout>
</LinearLayout>