<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/communication_log_list_item"
    android:layout_width="fill_parent"
    android:layout_height="66dip"
    android:background="@drawable/list_item_bg_xml"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <!-- 显示头像 -->

        <ImageView
            android:id="@+id/holder_FaceImageView"
            android:layout_width="46.0dip"
            android:layout_height="46.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10.0dip"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/voip_comm_img_unknow" />
        <!-- 显示通话类型图标 -->

        <ImageView
            android:id="@+id/holder_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/voip_commlog_icon_call_in_miss" />
        <!-- 显示姓名和电话 -->

        <LinearLayout
            android:layout_width="114dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="3dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/holder_CallNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dip"
                    android:paddingRight="0dip"
                    android:singleLine="true"
                    android:text="1111111"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/communication_unread_counts"
                    android:layout_width="48dip"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:layout_weight="1"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/holder_PhoneCode"
                style="@style/listitem_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dip"
                android:singleLine="true"
                android:text="1111111"
                android:textColor="#707070"
                android:textSize="13dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="0dip"
            android:gravity="right"
            android:orientation="horizontal" >

            <!-- 显示通话时间 -->

            <TextView
                android:id="@+id/holder_Time"
                android:layout_width="68dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="0dip"
                android:gravity="right"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:text="2012-10-12"
                android:textColor="#707070"
                android:textSize="13dip" />

            <!-- 显示箭头 -->

            <ImageView
                android:id="@+id/holder_ArrayImage"
                android:layout_width="wrap_content"
                android:layout_height="46dip"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="0dip"
                android:contentDescription="@string/app_name"
                android:paddingLeft="5dip"
                android:paddingRight="13dip"
                android:scaleType="centerInside"
                android:src="@drawable/pointer" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>