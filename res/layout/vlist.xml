<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/all_page_bg" >

    <ImageView
        android:id="@+id/setting_policy_group_logo"
        android:layout_width="47.0dip"
        android:layout_height="47.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:src="@drawable/group_categroy_yellow" />

    <TextView
        android:id="@+id/setting_policy_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/setting_policy_group_logo"
        android:text="1234567890"
        android:textColor="#333333"
        android:textSize="16dip" />

    <ImageView
        android:id="@+id/setting_voice_ctv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/button_switch_on" />

</RelativeLayout>