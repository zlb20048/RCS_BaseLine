<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="54dip" android:background="#ffffff"
	android:gravity="center_vertical" 
	android:id="@+id/quick_search">
	<LinearLayout android:layout_height="34dip"
		android:layout_width="fill_parent" android:background="@drawable/total_search_bg"
		android:layout_marginLeft="15dip" android:layout_marginRight="15dip"
		android:layout_marginTop="10dip" android:layout_marginBottom="10dip"
		
		android:gravity="center_vertical">
		<ImageView android:layout_height="wrap_content" android:layout_marginLeft="17dip"
			android:layout_width="wrap_content" android:src="@drawable/search" />
		<com.huawei.basic.android.im.ui.basic.LimitedEditText
			android:id="@+id/search_friend" android:layout_weight="1"
			android:layout_height="wrap_content" style="@style/search_text"
			android:layout_width="fill_parent" android:background="@null"
			android:singleLine="true" android:hint="@string/search"
			 />
		<ImageView android:id="@+id/cancel" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:src="@drawable/icon_cancel"
			android:layout_marginRight="3.0dip"
			android:visibility="gone" />
	</LinearLayout>
</LinearLayout>
