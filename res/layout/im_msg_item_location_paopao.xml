<?xml version="1.0" encoding="utf-8"?>
<!-- 我的位置泡泡 -->
<!-- 下载我的位置的进度显示 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:gravity="center" android:orientation="vertical"
	android:padding="6dip">
	<FrameLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:gravity="center">
		<LinearLayout android:id="@+id/map_layout"
			android:layout_width="160dp" android:layout_height="wrap_content"
			android:gravity="center" android:orientation="vertical"
			android:clickable="true" android:longClickable="true">
			<ImageView android:id="@+id/location_image"
				android:layout_width="160dp" android:layout_height="67dip"
				android:src="@drawable/no_map" android:background="#e5e5e5" />
			<TextView android:id="@+id/location_text"
				android:layout_width="160dp" android:layout_height="43dip"
				android:padding="6dip" android:maxWidth="193dp" android:textColor="#000000"
				android:textSize="12dp" android:hint="@string/postion_info"
				android:gravity="left" />
		</LinearLayout>
		<!-- 下载进度 -->
		<LinearLayout android:id="@+id/pb_layout"
			android:layout_width="160dp" android:layout_height="68dip"
			android:gravity="center" android:orientation="horizontal"
			android:background="#e5e5e5" android:clickable="true">
			<ProgressBar android:id="@+id/location_pb"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="center" android:background="#e5e5e5"
				style="@android:style/Widget.ProgressBar.Inverse" />
			<TextView android:id="@+id/pb_text" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textSize="12dp" />
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
