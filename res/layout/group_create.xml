<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/white_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="13.0dip"
        android:layout_marginRight="13.0dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/group_create_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 群名称 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41.0dip"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    style="@style/group_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/group_name_must" />
            </LinearLayout>

            <com.huawei.basic.android.im.ui.basic.LimitedEditText
                android:id="@+id/group_name_edit"
                style="@style/edittext_text"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                maxCharLength="20"
                android:background="@drawable/edittext_green"
                android:hint="@string/group_name_hint" />

            <!-- 群类型 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41.0dip"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    style="@style/group_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/group_type" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/commonusewhite" >

                <LinearLayout
                    android:id="@+id/group_type_row"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/setting_item_bg_all"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/group_type_text"
                        style="@style/listitem_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13.0dip"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_marginRight="15.0dip"
                        android:src="@drawable/pointer" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41.0dip"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    style="@style/group_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/group_validate" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/commonusewhite" >

                <LinearLayout
                    android:id="@+id/group_validate_row"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/setting_item_bg_all"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/group_validate_text"
                        style="@style/listitem_text_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13.0dip"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_marginRight="15.0dip"
                        android:src="@drawable/pointer" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41.0dip"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    style="@style/group_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/group_label" />
            </LinearLayout>

            <com.huawei.basic.android.im.ui.basic.LimitedEditText
                android:id="@+id/group_lable_edit"
                style="@style/edittext_text"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                maxCharLength="120"
                android:background="@drawable/edittext_green"
                android:hint="@string/group_label_hint" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="41.0dip"
                android:layout_marginLeft="2.0dip" >

                <TextView
                    style="@style/group_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:text="@string/group_introduction" />
            </LinearLayout>

            <com.huawei.basic.android.im.ui.basic.LimitedEditText
                android:id="@+id/group_introduction_edit"
                style="@style/edittext_text"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginBottom="20dip"
                maxCharLength="100"
                android:background="@drawable/edittext_green"
                android:hint="@string/group_introduction_hint" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>