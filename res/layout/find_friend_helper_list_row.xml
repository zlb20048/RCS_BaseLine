<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/find_friend_helper_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_xml"
    android:gravity="center_vertical"
    android:paddingBottom="10dip"
    android:paddingTop="10dip" 
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/find_friend_helper"
        android:layout_width="wrap_content"
        android:layout_height="120dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="6dip"
        android:layout_weight="1"
        android:background="@drawable/ic_find_friend_item"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="34dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/small_logo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dip" 
                android:src="@drawable/ic_friend_add_other"
                />

            <TextView
                android:id="@+id/find_friend_helper_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="8dip"
                android:layout_toRightOf="@+id/small_logo_image"
                android:gravity="center_vertical"
                android:textColor="#555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/find_friend_helper_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dip"
                android:gravity="center_vertical"
                android:textColor="#555555"
                android:textSize="12sp" 
                android:visibility="gone"/>
                
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_marginTop="8dip"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/find_friend_helper_image"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="8dip"
                android:src="@drawable/default_contact_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="1dip"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/find_friend_helper_nickname"
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/find_friend_helper_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dip"
                            android:layout_weight="0"
                            android:text="@string/add_group"
                            android:textColor="@color/status_waitting_color"
                            android:textSize="14sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/find_friend_helper_groupname"
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dip"
                            android:layout_weight="0.3"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/firendmanager_helper_group"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/add_friend_again_btn"
                        android:layout_width="72dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dip"
                        android:background="@drawable/btn_green"
                        android:focusable="false"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="13dip"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip"
            android:layout_marginLeft="60dip"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/find_friend_helper_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:gravity="bottom"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/find_friend_helper_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/find_friend_helper_groupname_below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:layout_marginLeft="3dip"
                android:layout_marginRight="3dip"
                android:layout_weight="0.3"
                android:ellipsize="end"
                android:gravity="bottom"
                android:singleLine="true"
                android:textColor="@color/firendmanager_helper_group"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pointer"
        android:layout_marginRight="3dip"
        />
</LinearLayout>